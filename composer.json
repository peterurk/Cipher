{
    "name": "peterurk/cipher",
    "type": "library",
    "description": "Cipher, an easy method to encrypt and decrypt",
    "keywords": ["cipher","encryption","decryption"],
    "homepage": "https://github.com/peterurk/Cipher",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Post",
            "email": "peterurk@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "peterurk\\Cipher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "peterurk\\Cipher\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/cipher"],
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src"
    },
    "config": {
        "sort-packages": true
    }
}
